<div class="admin__form admin__bg">
    <% if (success) { %>
        <div class="flash__message flash__message-success">
            <%= success %>
        </div>
        <% } %>
            <% if (errorMessage) { %>
                <div class="flash__message flash__message-danger">
                    <%= errorMessage %>
                </div>
                <% } %>
                    <h3 class="title-lil-2 txt-black">
                        <% if (editing) { %> Update <%= pastry.genre %>
                            <% } else { %> Add Pastry
                                <% } %>
                    </h3>
                    <form class="add__form" action="/admin/<% if (editing) { %>edit-pastry<% } else { %>add-pastry<% } %>" method="POST" enctype="multipart/form-data" id="form">
                        <div class="add__form--sheet">
                            <input type="text" class="add__input" id="name" placeholder="Name of cake" name="name" value="<% if (editing || hasError) { %><%= pastry.name %> <% } %>" required>
                            <label for="name" class="add__label">Name of cake</label>
                        </div>
                        <div class="add__form--sheet">
                            <input type="number" class="add__input" id="price" placeholder="Price" name="price" value="<% if (editing || hasError) { %><%= pastry.price %><% } %>" required>
                            <label for="price" class="add__label">Price</label>
                        </div>
                        <div class="add__form--sheet">
                            <input type="file" class="add__input" id="image" placeholder="Image" name="image">
                            <label for="image" class="add__label">Image</label>
                        </div>
                        <% if (editing || hasError) { %> 
                            <input type="hidden" name="type" value="<% if (editing || hasError) { %><%= pastry.genre %><% } %>">
                        <% } %>
                        <% if (!editing) { %>
                        <div class="add__form--sheet">
                           <input type="checkbox" name="category" id="category" style="display: none;" class="add__category">
                           <label for="category" class="add__input" id="choosen"><% if (editing || hasError) { %><%= pastry.genre %><% } else { %> Category <% } %></label>
                           <div class="add__category--list"  onclick="getRadioVal()">
                                    <input type="radio" id="birthday-cake" name="type" value="Birthday-cake" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="birthday-cake" class="add__category--item">Birthday Cake</label></div>
                                    <input type="radio" id="cookies" name="type" value="Cookie" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="cookies" class="add__category--item">Cookies</label></div>
                                    <input type="radio" id="cup-cakes" name="type" value="Cupcake" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="cup-cakes" class="add__category--item">Cup Cakes</label></div>
                                    <input type="radio" id="doughnuts" name="type" value="Doughnuts" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="doughnuts" class="add__category--item">Doughnuts</label></div>
                                    <input type="radio" id="pancakes" name="type" value="Pancake" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="pancakes" class="add__category--item">Pancakes</label></div>
                                    <input type="radio" id="valentine" name="type" value="Valentine" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="valentine" class="add__category--item">Valentine</label></div>
                                    <input type="radio" id="wedding-cakes" name="type" value="Wedding-cake" style="display: none;" class="category">
                                    <div class="add__category--item"><label for="wedding-cakes" class="add__category--item">Wedding Cake</label></div>
                                
                           </div>
                        </div>
                        <% } %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="add__form--sheet">
                            <textarea name="desc" cols="30" rows="5" class="add__input" placeholder="Description"><% if (editing || hasError) { %><%= pastry.description %> <% } %></textarea>
                        </div>
                        <% if (editing || hasError) { %>
                            <input type="hidden" value="<%= pastry._id %>" name="pastryId">
                            <% } %>
                                <button class="admin__btn" type="submit"><% if (editing) { %>Update<% } else { %>Add Pastry<% } %></button>
                                <!-- <a href="<%= path %>" class="admin__btn">View</a> -->
                    </form>
</div>